{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@shared/*": [
        "src/components/shared/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@remote/*": [
        "src/remote/*"
      ],
      "@constants": [
        "src/constants/index"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@stories/*": [
        "src/stories/*"
      ],
      "@mocks/*": [
        "src/mocks/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/mocks/server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}